<Window x:Class="Bank.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Authorization" Height="400" Width="300">
    <Grid Height="400" Margin="0" Width="300">
        <Label Content="Authorization" Margin="108,66,108,0" VerticalAlignment="Top"/>
        <Label Content="User name" HorizontalAlignment="Left" Margin="42,112,0,0" VerticalAlignment="Top" Width="68" Height="25"/>
        <TextBox x:Name="Name" HorizontalAlignment="Left" Height="18" Margin="41,137,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="42,193,0,0" VerticalAlignment="Top" Height="25" RenderTransformOrigin="0.541,0.415"/>
        <PasswordBox x:Name="Password" HorizontalAlignment="Left" Margin="41,218,0,0" VerticalAlignment="Top" Width="200" Height="18"/>
        <Button Content="Log in" HorizontalAlignment="Left" Margin="42,260,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
    </Grid>
</Window>
